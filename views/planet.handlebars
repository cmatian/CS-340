<div class="card" style="margin: 25px 0;">
    <h5 class="card-header">Create a new Planet</h5>
    <div class="card-body">
        <form method="post">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="planet-name">Planet Name<span class="required">*</span></label>
                    <input id="planet-name" name="planet_name" class="form-control" type="text" placeholder="Corellia" maxlength="100" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="planet-pop">Population<span class="required">*</span></label>
                    <input id="planet-pop" name="planet_pop" class="form-control" type="number" placeholder="3000000" maxlength="100" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="planet-owner">Controlled By<span class="required">*</span></label>
                    <select id="planet-owner" name="planet_owner" class="form-control">
                        <option value="NULL">Unknown</option>
                        {{#each faction}}
                        <option value="{{factionid}}">{{name}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Create Planet</button>
        </form>
    </div>
</div>

<h3>Planets:</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Population</th>
            <th scope="col">Controlled By</th>
            <th scope="col"></th> <!-- Edit Btn -->
            <th scope="col"></th> <!-- Delete Btn -->
        </tr>
    </thead>
    <tbody>
        {{#each planet}}
            <tr id="planet_{{planetid}}">
                <td>
                    <span class="view-layer">{{name}}</span>
                    <span class="edit-layer hidden">
                        <input class="form-control" type="text" name="planet_name" value="{{name}}" required>
                    </span>
                </td>
                <td>
                    <span class="view-layer">{{population_view}}</span>
                    <span class="edit-layer hidden">
                        <input class="form-control" type="number" name="planet_pop" value="{{population}}" required>
                    </span>
                </td>
                <td>
                    <span class="view-layer">{{ownername}}</span>
                    <span class="edit-layer hidden">
                        <select class="form-control owner" name="planet_owner">
                            <option value="NULL">Unknown</option>
                            {{#each ../faction}}
                            <option value='{{factionid}}' {{isSelected factionid ../owner}}>
                                {{name}}
                            </option>
                            {{/each}}
                        </select>
                    </span>
                </td>
                <td>
                    <span class="view-layer">
                        <button class="btn btn-sm btn-outline-primary edit" onclick="editPlanet('{{planetid}}');">Edit</button>
                    </span>
                    <span class="edit-layer hidden">
                        <button class="btn btn-sm btn-outline-primary save" onclick="updatePlanet('{{planetid}}');">Save</button>
                    </span>
                </td>
                <td>
                    <button class="btn btn-sm btn-outline-danger delete" onclick="deletePlanet('{{planetid}}');">Delete</button>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>